{
  "manifest_version": 3,
  "name": "KeyCut",
  "description": "Create keyboard shortcuts to open specific websites.",
  "version": "1.0",
  "permissions": [
    "notifications",
    "storage",
    "tabs",
    "commands"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "Ctrl+Shift+1": {
      "suggested_key": {
        "default": "Ctrl+Shift+1",
        "mac": "Command+Shift+1"
      },
      "description": "Open the first specific website"
    },
    "Ctrl+Shift+2": {
      "suggested_key": {
        "default": "Ctrl+Shift+2",
        "mac": "Command+Shift+2"
      },
      "description": "Open the second specific website"
    },
    "Ctrl+Shift+3": {
      "suggested_key": {
        "default": "Ctrl+Shift+3",
        "mac": "Command+Shift+3"
      },
      "description": "Open the third specific website"
    }
  }
}
